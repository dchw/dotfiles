#Server
set my_server=mail.messagingengine.com
set my_smtp_server=mail.messagingengine.com

#User
source ~/.mutt/creds
set imap_user = $my_user
set imap_pass = $my_pass
set from="corey@eatrunco.de"
set realname="Corey Larson"

#SMTP
set smtp_url="smtp://$my_user:$my_pass@$my_smtp_server:587/"
set mail_check=300
set timeout=600

#Mailboxes
set folder="imaps://$my_server"
set spoolfile="="
set record="=Sent Items"
set postponed="=Drafts"

#HTML Mails
auto_view text/html
#alternative_order text/plain text/html
